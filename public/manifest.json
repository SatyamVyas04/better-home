{
  "manifest_version": 3,
  "name": "better-home",
  "description": "A minimal, delightful new-tab replacement with tasks, quick links, and a mood calendar.",
  "version": "1.0.1",
  "icons": {
    "16": "better-home-logo-16.png",
    "32": "better-home-logo-32.png",
    "48": "better-home-logo-48.png",
    "128": "better-home-logo-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "better-home-logo-16.png",
      "32": "better-home-logo-32.png",
      "48": "better-home-logo-48.png",
      "128": "better-home-logo-128.png"
    },
    "default_title": "better-home"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage"]
}
