{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "tagName": "v${version}",
    "commitMessage": "chore: release v${version}",
    "addUntrackedFiles": true
  },
  "github": {
    "release": true,
    "assets": ["release/*.zip", "release/*.tar.gz"]
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": "node scripts/sync-manifest.js && git add public/manifest.json",
    "before:release": "node scripts/release-package.js"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": "conventionalcommits"
    }
  }
}
